{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "baseUrl": ".",
    "paths": {
      "react": ["./node_modules/@types/react"],
      "@components/*": ["src/components/*"],
      "@components": ["src/components"],
      "@contexts/*": ["src/contexts/*"],
      "@contexts": ["src/contexts"],
      "@fonts": ["src/fonts"],
      "@hocs/*": ["src/hocs/*"],
      "@styles/*": ["src/styles/*"],
      "@styles": ["src/styles"],
      "@public/*": ["public/*"],
      "@public": ["public"],
      "@assets/*": ["src/assets/*"],
      "@src/*": ["src/*"],
      "@pages/*": ["pages/*"],
      "@mocks/*": ["__mocks__/*"],
      "@tests/*": ["__tests__/*"]
    },
    "incremental": true
  },
  "include": ["next-env.d.ts", "**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
