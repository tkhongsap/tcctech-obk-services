{
  "name": "ob-iam-v2",
  "version": "1.8.18",
  "main": "server.js",
  "license": "MIT",
  "devDependencies": {
    "@types/cors": "^2.8.16",
    "@types/express": "^4.17.20",
    "@types/jest": "^29.5.6",
    "@types/node": "^20.8.7",
    "@types/supertest": "^2.0.15",
    "@typescript-eslint/eslint-plugin": "^6.8.0",
    "@typescript-eslint/parser": "^6.8.0",
    "concurrently": "^8.2.2",
    "dotenv": "^16.5.0",
    "eslint": "^8.51.0",
    "eslint-config-prettier": "^9.0.0",
    "eslint-plugin-prettier": "^5.0.1",
    "husky": "^8.0.3",
    "lint-staged": "^15.0.1",
    "nodemon": "^3.0.1",
    "prettier": "^3.0.3",
    "supertest": "^6.3.3",
    "ts-jest": "^29.1.1",
    "ts-node": "^10.9.1",
    "ts-node-dev": "^2.0.0",
    "typescript": "^5.2.2"
  },
  "scripts": {
    "start": "node ./dist/src/server.js",
    "dev-noroute": "concurrently 'nodemon -r dotenv/config ./src/server.ts'",
    "dev": "concurrently \"nodemon -r dotenv/config ./src/server.ts\" \"npx prisma generate --watch\" \"nodemon -x tsoa spec-and-routes\"",
    "test": "jest -in-band",
    "test:coverage": "jest -in-band --coverage && open coverage/lcov-report/index.html",
    "lint": "eslint ./src/**/*.ts --fix",
    "format": "prettier --write 'src/**/*.{ts,tsx,json,md}'",
    "build": "tsoa spec-and-routes && tsc",
    "openapi:build": "tsoa spec-and-routes",
    "sdk:build": "(tsoa spec-and-routes && cd sdk &&  rm -rf api && npx openapi-generator-cli generate -i ../build/swagger.json -g typescript-axios -o ./api --skip-validate-spec)",
    "sdk:publish": "(cd sdk && rm -rf dist && tsc && yarn publish)",
    "prisma:generate": "npx prisma generate --schema=db/schema.prisma",
    "db:create:migration": "npx prisma migrate dev --create-only",
    "db:migrate": "npx prisma migrate dev",
    "db:migrate:format": "npx prisma format",
    "db:seed": "dotenv -e .env -- bash -c 'for file in $(ls -v ./db/seeds/*.sql | sort); do psql \"$DATABASE_URL\" -f \"$file\"; done'",
    "keypair:generate": "tsc && ts-node src/utils/scripts/generate_key_pair.ts"
  },
  "dependencies": {
    "@aws-sdk/client-ses": "^3.485.0",
    "@aws-sdk/client-sns": "^3.485.0",
    "@openapitools/openapi-generator-cli": "^2.7.0",
    "@prisma/client": "5.4.2",
    "@types/axios": "^0.14.0",
    "@types/bcrypt": "^5.0.0",
    "@types/jsonwebtoken": "^9.0.3",
    "@types/lodash": "^4.14.200",
    "@types/luxon": "^3.3.0",
    "@types/multer": "^1.4.9",
    "@types/otp-generator": "^4.0.2",
    "@types/swagger-ui-express": "^4.1.5",
    "@types/uuid": "^9.0.1",
    "@types/yamljs": "^0.2.31",
    "aws-sdk": "^2.1481.0",
    "axios": "^1.6.0",
    "bcrypt": "^5.1.0",
    "cors": "^2.8.5",
    "dayjs": "^1.11.10",
    "dotenv-cli": "^8.0.0",
    "express": "^4.18.2",
    "express-http-context": "^1.2.4",
    "husky": "^8.0.3",
    "jest": "^29.7.0",
    "jsonwebtoken": "^9.0.2",
    "kafkajs": "^2.2.4",
    "luxon": "^3.4.4",
    "multer": "^1.4.5-lts.1",
    "node-cache": "^5.1.2",
    "ob-bms-sdk": "^0.0.95",
    "otp-generator": "^4.0.1",
    "prisma": "5.5.2",
    "redis": "^4.6.13",
    "swagger-ui-express": "^5.0.0",
    "ts-mockito": "^2.6.1",
    "tsoa": "^6.0.1",
    "uuid": "^9.0.0",
    "winston": "^3.11.0"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "pre-push": "yarn lint && yarn test"
    }
  },
  "lint-staged": {
    "*.{js,ts,tsx}": [
      "eslint --fix",
      "git add"
    ]
  },
  "engineStrict": true,
  "prisma": {
    "schema": "./db/schema.prisma"
  }
}
